document.addEventListener('DOMContentLoaded',async function(){function includeStylesheet(url){var link=document.createElement('link');link.rel='stylesheet';link.href=url;document.head.appendChild(link);}
async function loadScript(src){return new Promise((resolve,reject)=>{const script=document.createElement("script");script.src=src;script.onload=resolve;script.onerror=reject;document.head.appendChild(script);});}
await loadScript("https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js")
