window.addEventListener("DOMContentLoaded",()=>{document.querySelector(".tab-upcoming").classList.add("tabs-segmented__active");document.querySelector(".events-completed").style.display="none";document.querySelector(".tab-completed").onclick=function(){document.querySelector(".tab-upcoming").classList.remove("tabs-segmented__active");document.querySelector(".tab-upcoming").classList.add("tabs-segmented__inactive");document.querySelector(".tab-completed").classList.remove("tabs-segmented__inactive");document.querySelector(".tab-completed").classList.add("tabs-segmented__active");document.querySelector(".events-upcoming").style.display="none";document.querySelector(".events-completed").style.display="flex";document.querySelector(".glider").style.transform="translateX(93px)";document.querySelector(".glider").style.width="94px";}
document.querySelector(".tab-upcoming").onclick=function(){document.querySelector(".tab-upcoming").classList.add("tabs-segmented__active");document.querySelector(".tab-upcoming").classList.remove("tabs-segmented__inactive");document.querySelector(".tab-completed").classList.add("tabs-segmented__inactive");document.querySelector(".tab-completed").classList.remove("tabs-segmented__active");document.querySelector(".events-completed").style.display="none";document.querySelector(".events-upcoming").style.display="flex";document.querySelector(".glider").style.transform="translateX(0px)";document.querySelector(".glider").style.width="88px";}})