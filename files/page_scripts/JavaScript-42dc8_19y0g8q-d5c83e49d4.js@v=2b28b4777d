document.addEventListener("DOMContentLoaded",function(){const questions=document.querySelectorAll(".question");questions.forEach(function(question){question.addEventListener("click",function(){const answer=question.nextElementSibling;answer.style.maxHeight=answer.style.maxHeight?null:answer.scrollHeight+"px";const minus=question.querySelector(".minus");const plus=question.querySelector(".plus");minus.style.display=answer.style.maxHeight?"flex":"none";plus.style.display=answer.style.maxHeight?"none":"flex";});});});