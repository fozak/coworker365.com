const initializeTabs=()=>{const elements={tabIcons:document.querySelectorAll(".tab-icon"),tabPanels:document.querySelectorAll(".tab-panel"),tabIconsContainer:document.querySelector(".tab-icons"),};const autoScroll=(activeTab,onClick)=>{if(onClick)
activeTab.scrollIntoView({behavior:'smooth',inline:'center',block:'nearest'});};const setActiveTab=(icon,onClick)=>{elements.tabIcons.forEach(tab=>tab.classList.remove("active"));icon.classList.add("active");const targetTab=icon.dataset.tab;elements.tabPanels.forEach(panel=>{panel.classList.toggle("hidden",panel.id!==targetTab);});autoScroll(icon,onClick);};const initializeModal=()=>{const modal=document.createElement("div");const modalImg=document.createElement("img");modal.classList.add("modal");modal.appendChild(modalImg);document.body.appendChild(modal);document.querySelectorAll(".thumbnail").forEach(img=>{img.addEventListener("click",()=>{modalImg.src=img.src;modal.classList.add("active");});});modal.addEventListener("click",()=>modal.classList.remove("active"));};const activeTab=elements.tabIcons[0];if(activeTab){setActiveTab(activeTab,false);}else{elements.tabPanels.forEach(panel=>panel.classList.add("hidden"));}
elements.tabIcons.forEach(icon=>{icon.addEventListener("click",()=>setActiveTab(icon,true));});initializeModal();};document.addEventListener("DOMContentLoaded",initializeTabs);