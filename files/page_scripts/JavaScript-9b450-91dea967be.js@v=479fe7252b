window.addEventListener("DOMContentLoaded",()=>{document.querySelector(".tab-1").classList.add("tabs-grouped__active");document.querySelector(".tab-1").onclick=function(){document.querySelector(".tab-1").classList.add("tabs-grouped__active");document.querySelector(".tab-2").classList.remove("tabs-grouped__active");document.querySelector(".tab-3").classList.remove("tabs-grouped__active");document.querySelector(".principles").style.display="block";document.querySelector(".philosophies").style.display="none";document.querySelector(".policies").style.display="none";}
document.querySelector(".tab-2").onclick=function(){document.querySelector(".tab-1").classList.remove("tabs-grouped__active");document.querySelector(".tab-2").classList.add("tabs-grouped__active");document.querySelector(".tab-3").classList.remove("tabs-grouped__active");document.querySelector(".principles").style.display="none";document.querySelector(".philosophies").style.display="block";document.querySelector(".policies").style.display="none";}
document.querySelector(".tab-3").onclick=function(){document.querySelector(".tab-1").classList.remove("tabs-grouped__active");document.querySelector(".tab-2").classList.remove("tabs-grouped__active");document.querySelector(".tab-3").classList.add("tabs-grouped__active");document.querySelector(".principles").style.display="none";document.querySelector(".philosophies").style.display="none";document.querySelector(".policies").style.display="block";}})