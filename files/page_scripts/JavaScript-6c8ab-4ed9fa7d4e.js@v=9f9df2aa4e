const initializeTabs=()=>{const elements={tabIcons:document.querySelectorAll(".tab-icon"),tabPanels:document.querySelectorAll(".tab-panel"),tabIconsContainer:document.querySelector(".tab-icons"),};console.log(elements)
const createSlider=()=>{const slider=document.createElement("div");Object.assign(slider.style,{position:"absolute",bottom:"0",height:"3px",backgroundColor:"#0089FF",transition:"left 0.3s ease, width 0.3s ease",display:"none",});slider.className="tab-slider";elements.tabIconsContainer?.appendChild(slider);return slider;};const slider=createSlider();const updateSlider=(activeTab)=>{const tabRect=activeTab.getBoundingClientRect();const containerRect=elements.tabIconsContainer?.getBoundingClientRect();if(!containerRect)return;slider.style.left=`${tabRect.left - containerRect.left}px`;slider.style.width=`${tabRect.width}px`;};const setActiveTab=(icon)=>{elements.tabIcons.forEach(tab=>tab.classList.remove("active"));icon.classList.add("active");const targetTab=icon.dataset.tab;elements.tabPanels.forEach(panel=>{panel.classList.toggle("hidden",panel.id!==targetTab);});updateSlider(icon);};const initializeModal=()=>{const modal=document.createElement("div");const modalImg=document.createElement("img");modal.classList.add("modal");modal.appendChild(modalImg);document.body.appendChild(modal);document.querySelectorAll(".thumbnail").forEach(img=>{img.addEventListener("click",()=>{modalImg.src=img.src;modal.classList.add("active");});});modal.addEventListener("click",()=>modal.classList.remove("active"));};const activeTab=elements.tabIcons[0];if(activeTab){setActiveTab(activeTab);}else{elements.tabPanels.forEach(panel=>panel.classList.add("hidden"));}
elements.tabIcons.forEach(icon=>{icon.addEventListener("click",()=>setActiveTab(icon));});initializeModal();};document.addEventListener("DOMContentLoaded",initializeTabs);