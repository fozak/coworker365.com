document.addEventListener("DOMContentLoaded",function(){const pagination=document.querySelector(".pagination");const previous=pagination.querySelector(".previous");const next=pagination.querySelector(".next");const position_1=pagination.querySelector(".position-1");const position_2=pagination.querySelector(".position-2");const position_3=pagination.querySelector(".position-3");const current_page=parseInt(page_data?.current_page)||1;const total_pages=parseInt(page_data?.total_pages)||1;if(total_pages===1){pagination.style.display="none";return;}
if(total_pages===2){position_3.style.display="none";}
if(current_page===1){previous.setAttribute("disabled",true);}else{previous.href=updateQueryStringParameter(window.location.href,"page",current_page-1);}
if(current_page===total_pages){next.setAttribute("disabled",true);}else{next.href=updateQueryStringParameter(window.location.href,"page",current_page+1);}
if(current_page===1){position_1.innerText=1;position_1.href=updateQueryStringParameter(window.location.href,"page",1);position_2.innerText=2;position_2.href=updateQueryStringParameter(window.location.href,"page",2);position_3.innerText=3;position_3.href=updateQueryStringParameter(window.location.href,"page",3);}else if(current_page===total_pages){position_1.innerText=total_pages-2;position_1.href=updateQueryStringParameter(window.location.href,"page",total_pages-2);position_2.innerText=total_pages-1;position_2.href=updateQueryStringParameter(window.location.href,"page",total_pages-1);position_3.innerText=total_pages;position_3.href=updateQueryStringParameter(window.location.href,"page",total_pages);}else{position_1.innerText=current_page-1;position_1.href=updateQueryStringParameter(window.location.href,"page",current_page-1);position_2.innerText=current_page;position_2.href=updateQueryStringParameter(window.location.href,"page",current_page);position_3.innerText=current_page+1;position_3.href=updateQueryStringParameter(window.location.href,"page",current_page+1);}
if(current_page===1){position_1.style.color="#171717";position_1.style.fontWeight="600";}else if(current_page===total_pages){position_3.style.color="#171717";position_3.style.fontWeight="600";}else{position_2.style.color="#171717";position_2.style.fontWeight="600";}});function updateQueryStringParameter(uri,key,value){const url=new URL(uri);const params=new URLSearchParams(url.search);params.set(key,value);url.search=params.toString();return url.toString();}