window.addEventListener("DOMContentLoaded",function(){const user_region=get_user_region();document.querySelectorAll(".inr-pricing").forEach(function(el){el.style.display=user_region==="Mumbai"?"flex":"none";});document.querySelectorAll(".usd-pricing").forEach(function(el){el.style.display=user_region!=="Mumbai"?"flex":"none";});function get_user_region(){const user_timezone=Intl.DateTimeFormat().resolvedOptions().timeZone;const timezone_map={"Asia/Kolkata":"Mumbai","Asia/Calcutta":"Mumbai","Asia/Riyadh":"KSA","Asia/Aden":"KSA","Asia/Dubai":"UAE","Asia/Muscat":"UAE","Europe/London":"London","GB":"London","Europe/Zurich":"Zurich","Europe/Berlin":"Zurich","Asia/Singapore":"Singapore","Asia/Brunei":"Singapore","Asia/Bahrain":"Bahrain","Asia/Qatar":"Bahrain","Africa/Johannesburg":"Cape Town","Africa/Windhoek":"Cape Town","America/New_York":"Virginia","America/Detroit":"Virginia"};return timezone_map[user_timezone]||"Virginia";}})