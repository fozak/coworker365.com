document.addEventListener('DOMContentLoaded',function(){const videos=document.querySelectorAll('video');const observer=new IntersectionObserver((entries)=>{entries.forEach(entry=>{if(entry.isIntersecting){entry.target.play();}else{entry.target.pause();}});});videos.forEach(video=>{video.autoplay=false
video.muted=true
observer.observe(video);});});