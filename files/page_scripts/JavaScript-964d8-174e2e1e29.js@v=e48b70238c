window.addEventListener("DOMContentLoaded",function(){const filterArea=document.querySelector('.filter-area');filterArea.appendChild(createFilter('product','Product/Service',["All Products",...(page_data?.products||[])]));filterArea.appendChild(createFilter('country','Country',["All Countries",...(page_data?.countries||[])]));function createFilter(name,label,options){const filter=document.createElement('div');filter.classList.add('filter');const params=new URLSearchParams(window.location.search);const value=params.get(name);filter.innerHTML=`
    		<select class="white-filter" name="${name}" id="${name}">
    			<option value="" disabled>${label}</option>
    			${options.map(option => `<option value="${option}"${value==option?'selected':''}>${option}</option>`)}
    		</select>
    	`;filter.querySelector('select').addEventListener('change',function(){const params=new URLSearchParams(window.location.search);params.set(this.name,this.value);window.location.search=params.toString();});return filter;}
function createSearchInput(placeholder="Search"){const searchInput=document.createElement('input');searchInput.type='text';searchInput.placeholder=placeholder;searchInput.autofocus=true;searchInput.value=new URLSearchParams(window.location.search).get('search');searchInput.addEventListener("keypress",function(event){if(event.key==="Enter"){const params=new URLSearchParams(window.location.search);params.set('search',this.value);window.location.search=params.toString();}})
return searchInput;}});