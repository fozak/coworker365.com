function setup_sidebar_toggle(){window.addEventListener("DOMContentLoaded",function(){document.querySelector(".frappe-sidebar-toggle").addEventListener("click",()=>{document.querySelector(".hr-sidebar").style.left="0px";document.querySelector(".sidebar-backdrop").style.display="block";});document.querySelector(".sidebar-backdrop").addEventListener("click",()=>{document.querySelector(".hr-sidebar").style.left="-250px";document.querySelector(".sidebar-backdrop").style.display="none";});});}
function isMobile(){return window.matchMedia("(max-width: 767px)").matches;}
function isTablet(){return window.matchMedia("(max-width: 1024px) and (min-width: 768px)").matches;}
const parentItems=document.querySelectorAll('.parent-item');parentItems.forEach(parent=>{const collapsible=parent.querySelector('.collapsible');const childItems=parent.querySelector('.child-items');const chevron=parent.querySelector('.chevron');collapsible.addEventListener('click',()=>{const isHidden=!childItems.style.height||childItems.style.height==="0px";parentItems.forEach(item=>{const otherChildItems=item.querySelector('.child-items');const otherChevron=item.querySelector('.chevron');if(otherChildItems!==childItems){otherChildItems.style.height="0";otherChevron.classList.remove('chevron-flipped');}});if(isHidden){childItems.style.height=childItems.scrollHeight+"px";chevron.classList.add('chevron-flipped');}else{childItems.style.height="0";chevron.classList.remove('chevron-flipped');}});});setup_sidebar_toggle();window.addEventListener("DOMContentLoaded",async()=>{if(isMobile()||isTablet())return;document.querySelectorAll(".nav-item-title").forEach(function(el){el.style.display="none";});const sidebar=document.querySelector(".hr-sidebar");sidebar.style.transition="width .2s";sidebar.onmouseover=function(){sidebar.style.width="210px";sidebar.querySelectorAll(".nav-item-title").forEach(function(el){el.style.display="flex";});};sidebar.onmouseout=function(event){if(!sidebar.contains(event.relatedTarget)){document.querySelectorAll(".nav-item-title").forEach(function(el){el.style.display="none";});parentItems.forEach(item=>{const childItems=item.querySelector('.child-items');const chevron=item.querySelector('.chevron');childItems.style.height="0";chevron.classList.remove('chevron-flipped');});sidebar.style.width="52px";}};});