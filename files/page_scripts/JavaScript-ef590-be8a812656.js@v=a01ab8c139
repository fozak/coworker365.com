window.addEventListener("DOMContentLoaded",async()=>{document.querySelector(".tab-1").classList.add("tabs-grouped__active");document.querySelector(".tab-1").onclick=function(){document.querySelector(".tab-1").classList.add("tabs-grouped__active");document.querySelector(".tab-2").classList.remove("tabs-grouped__active");document.querySelector(".tab-3").classList.remove("tabs-grouped__active");document.querySelector(".reviews").style.display="flex";document.querySelector(".videos").style.display="none";document.querySelector(".stories").style.display="none";}
document.querySelector(".tab-2").onclick=function(){document.querySelector(".tab-1").classList.remove("tabs-grouped__active");document.querySelector(".tab-2").classList.add("tabs-grouped__active");document.querySelector(".tab-3").classList.remove("tabs-grouped__active");document.querySelector(".reviews").style.display="none";document.querySelector(".videos").style.display="flex";document.querySelector(".stories").style.display="none";}
document.querySelector(".tab-3").onclick=function(){document.querySelector(".tab-1").classList.remove("tabs-grouped__active");document.querySelector(".tab-2").classList.remove("tabs-grouped__active");document.querySelector(".tab-3").classList.add("tabs-grouped__active");document.querySelector(".reviews").style.display="none";document.querySelector(".videos").style.display="none";document.querySelector(".stories").style.display="flex";}});